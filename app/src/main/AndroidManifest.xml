<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vsdeni.ejru">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.BaseActivity"></activity>

        <activity android:name=".activities.ArticleActivity"></activity>

        <service
            android:name="com.octo.android.robospice.retrofit.RetrofitGsonSpiceService"
            android:exported="false" />

        <service android:name="com.vsdeni.ejru.network.RequestService"></service>

        <provider
            android:authorities="com.vsdeni.ejru.data.EjContentProvider"
            android:name=".data.EjContentProvider"></provider>
    </application>

</manifest>
