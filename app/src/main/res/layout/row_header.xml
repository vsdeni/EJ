<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/iv_header_thumbnail"
        android:layout_width="60dp"
        android:scaleType="centerCrop"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/tv_header_name"
        android:textSize="16sp"
        android:lines="2"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/iv_header_thumbnail"
        android:layout_marginRight="5dp"
        android:text="Вместо туристов в Крым прибудут зеленые человечки"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_header_date"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:layout_below="@id/tv_header_name"
        android:textColor="@android:color/darker_gray"
        android:text="17 сентября 2014"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignTop="@id/tv_header_date"
        android:id="@+id/tv_header_author"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="Александр Гольц"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tv_header_date"
        android:text="asdf;lkajsf sd;lf ks;flasjl;kjfsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_spoiler"/>

</RelativeLayout>