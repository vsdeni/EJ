<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/header_meta_def_text_size"
        tools:text="17 сентября 2014"/>

    <com.ejnew.news.views.TitleTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:textColor="@android:color/black"
        android:textSize="@dimen/header_title_def_text_size"
        android:textStyle="bold"
        tools:text="Итоги недели. Ничего личного"/>

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/date"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/date"
        android:text="Александр Гольц"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/header_meta_def_text_size"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/header_meta_def_text_size"
        tools:text="В обществе"/>

    <TextView
        android:id="@+id/spoiler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/header_spoiler_def_text_size"
        tools:text="asdf;lkajsf sd;lf ks;flasjl;kjfsa"/>

</RelativeLayout>