<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

    <FrameLayout
        android:id="@+id/thumbnail_holder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail_holder"
        android:layout_marginRight="5dp"
        android:lines="2"
        android:text="Вместо туристов в Крым прибудут зеленые человечки"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header_name"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="17 сентября 2014"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_header_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_header_date"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/tv_header_date"
        android:text="Александр Гольц"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_spoiler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header_date"
        android:text="asdf;lkajsf sd;lf ks;flasjl;kjfsa"/>

</RelativeLayout>